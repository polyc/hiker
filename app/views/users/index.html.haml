%h1 All Users

%table#users
  %thead
    %tr
      %th
      %th User Nickname
      %th Name
      %th Surname
      %th Sex
      %th Birth Date
      %th E-mail
      %th Description
      %th City
      %th Picture
  %tbody
    - @users.each_with_index do |u, idx|
      %tr
        %td #{idx + 1}
        %td= link_to "#{u.nickname}", user_path(u.id)
        %td= u.name
        %td= u.surname
        %td= u.gender
        %td= u.birthdate
        %td= u.email
        %td= u.description
        %td= u.city
        %td= image_tag u.image.url if u.image?
        = debug(u)
  = link_to 'add user', new_user_path
